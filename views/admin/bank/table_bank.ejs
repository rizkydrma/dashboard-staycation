<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">
      <!-- Button trigger modal -->
      <button
        type="button"
        class="btn btn-primary"
        data-toggle="modal"
        data-target="#addBankModal"
      >
        <i class="fas fa-plus"></i>
        Add Data
      </button>
    </h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Bank Name</th>
            <th>No Rekening</th>
            <th>Owner Name</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% banks.forEach((bank,index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= bank.bankName %></td>
            <td><%= bank.nomorRekening %></td>
            <td><%= bank.ownerName %></td>
            <td>
              <img
                src="https://dashboard-staycation.herokuapp.com/<%= bank.imageUrl %>"
                alt="logo bank"
                width="80"
              />
            </td>
            <td>
              <form
                action="/admin/bank/<%= bank._id  %>?_method=DELETE"
                method="POST"
              >
                <button
                  type="button"
                  class="btn btn-sm btn-warning btn-edit"
                  data-toggle="modal"
                  data-target="#editBankModal"
                  data-id="<%= bank._id %>"
                  data-bankName="<%= bank.bankName %>"
                  data-nomorRekening="<%= bank.nomorRekening %>"
                  data-ownerName="<%= bank.ownerName %>"
                >
                  <i class="fas fa-edit"></i>
                </button>
                <button type="submit" class="btn btn-sm btn-danger">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
