<div
  class="tab-pane fade show active"
  id="show-item"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>No</th>
              <th>Title</th>
              <th>Price</th>
              <th>Country</th>
              <th>City</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach((item,index)=>{ %>
            <tr>
              <td><%= index+1 %></td>
              <td><%= item.title %></td>
              <td><%= item.price %></td>
              <td><%= item.country %></td>
              <td><%= item.city %></td>
              <td>
                <form
                  action="/admin/item/<%= item._id  %>/delete?_method=DELETE"
                  method="POST"
                >
                  <a
                    href="/admin/item/show-image/<%= item._id  %>"
                    class="btn btn-sm btn-circle btn-info"
                  >
                    <i class="fas fa-image"></i
                  ></a>
                  <a
                    href="/admin/item/<%= item._id %>"
                    class="btn btn-sm btn-circle btn-warning"
                  >
                    <i class="fas fa-edit"></i>
                  </a>
                  <button
                    type="submit"
                    class="btn btn-sm btn-circle btn-danger"
                  >
                    <i class="fas fa-trash"></i>
                  </button>
                  <a
                    href="/admin/item/show-detail-item/<%= item._id %>"
                    class="btn btn-sm btn-circle btn-success"
                  >
                    <i class="fas fa-plus"></i
                  ></a>
                </form>
              </td>
            </tr>

            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
