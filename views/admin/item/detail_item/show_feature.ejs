<div
  class="tab-pane show active fade"
  id="show-feature"
  role="tabpanel"
  aria-labelledby="profile-tab"
>
  <div class="row">
    <div class="col-md-7">
      <div class="card shadow mb-4">
        <div class="card-body">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTable"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Qty</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% features.forEach((feature,i)=>{ %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= feature.name %></td>
                  <td><%= feature.qty %></td>
                  <td>
                    <img
                      src="/<%= feature.imageUrl %>"
                      alt="image-feature-<%= i+1 %>"
                      width="70px"
                    />
                  </td>
                  <td>
                    <form
                      action="/admin/item/<%= itemId %>/feature/<%= feature._id %>?_method=DELETE"
                      method="POST"
                    >
                      <button
                        type="button"
                        class="btn btn-sm btn-warning btn-edit-feature"
                        data-toggle="modal"
                        data-target="#editFeatureModal"
                        data-id="<%= feature._id %>"
                        data-name="<%= feature.name %>"
                        data-qty="<%= feature.qty %>"
                      >
                        <i class="fas fa-edit"></i>
                      </button>
                      <button type="submit" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-auto">
      <div class="card shadow mb-4">
        <div class="card-body">
          <form
            action="/admin/item/add/feature"
            method="POST"
            enctype="multipart/form-data"
          >
            <input type="hidden" value="<%= itemId %>" name="itemId" />
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                placeholder="enter name..."
                required
              />
            </div>
            <div class="form-group">
              <label for="qty">QTY</label>
              <input
                type="text"
                class="form-control"
                name="qty"
                placeholder="enter quantity..."
                required
              />
            </div>
            <div class="form-group">
              <label for="image">Image</label>
              <input type="file" class="form-control" name="image" />
            </div>
            <button type="submit" class="btn btn-primary">
              Save Data
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
